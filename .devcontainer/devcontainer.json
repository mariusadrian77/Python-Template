{
    "name": "Data Engineering Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                // Python settings
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.pythonPath": "/usr/local/bin/python",
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.autoImportCompletions": true,
                "python.analysis.inlayHints.functionReturnTypes": true,
                "python.analysis.inlayHints.variableTypes": true,
                "python.formatting.provider": "black",
                "python.formatting.blackPath": "/usr/local/py-utils/bin/black",
                "python.formatting.blackArgs": [
                    "--line-length",
                    "88"
                ],
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.mypyEnabled": true,
                "python.linting.flake8Enabled": true,
                "python.testing.pytestEnabled": true,
                "python.poetryPath": "poetry",
                // Jupyter settings
                "jupyter.interactiveWindow.textEditor.executeSelection": true,
                "jupyter.allowUnauthorizedRemoteConnection": true,
                "jupyter.widgetScriptSources": [
                    "jsdelivr.com",
                    "unpkg.com"
                ],
                "jupyter.themeMatplotlibPlots": true,
                "jupyter.askForKernelRestart": false,
                // Editor settings
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "editor.rulers": [
                    88,
                    100
                ],
                "editor.bracketPairColorization.enabled": true,
                "editor.guides.bracketPairs": true,
                "editor.suggestSelection": "first",
                "editor.quickSuggestions": {
                    "strings": true
                },
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true,
                    "source.fixAll": true
                },
                "editor.inlineSuggest.enabled": true,
                // File settings
                "files.insertFinalNewline": true,
                "files.trimFinalNewlines": true,
                "files.trimTrailingWhitespace": true,
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/.pytest_cache": true,
                    "**/*.pyc": true
                },
                "files.watcherExclude": {
                    "**/.git/objects/**": true,
                    "**/.git/subtree-cache/**": true,
                    "**/node_modules/**": true,
                    "**/.venv/**": true,
                    "**/__pycache__/**": true
                },
                // Git settings
                "git.enableSmartCommit": true,
                "git.autofetch": true,
                "git.confirmSync": false,
                // Terminal settings
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.enableMultiLinePasteWarning": false,
                // SQL settings
                "sql-formatter.uppercase": true,
                "sql-formatter.linesBetweenQueries": 2
            },
            "extensions": [
                // Python & Data Science
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-python.isort",
                "charliermarsh.ruff", // Fast Python linter
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-toolsai.datawrangler",
                "zeshuaro.vscode-python-poetry",
                // AI & ML
                "ms-toolsai.vscode-ai", // Azure ML integration
                "ms-pytorch.vscode-pytorch-snippets",
                // Database & Big Data
                "mtxr.sqltools", // SQL client
                "mtxr.sqltools-driver-pg", // PostgreSQL driver
                "mongodb.mongodb-vscode", // MongoDB integration
                "redhat.vscode-xml", // XML tools
                "redhat.vscode-yaml", // YAML tools
                // Data Visualization
                "mechatroner.rainbow-csv", // CSV/TSV file viewer
                "GrapeCity.gc-excelviewer", // Excel viewer
                "RandomFractalsInc.vscode-data-preview", // Data preview
                "msrvida.vscode-sanddance", // Data visualization
                // Development Tools
                "ms-vscode-remote.vscode-remote-extensionpack",
                "ms-azuretools.vscode-docker",
                "ms-vscode.makefile-tools",
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one",
                "davidanson.vscode-markdownlint",
                "bierner.markdown-preview-github-styles",
                // Git & Collaboration
                "GitHub.vscode-pull-request-github",
                "eamodio.gitlens",
                "mhutchie.git-graph",
                // Code Quality & Documentation
                "njpwerner.autodocstring", // Python docstring generator
                "sourcery.sourcery", // Python code quality suggestions
                "KevinRose.vsc-python-indent", // Smart Python indentation
                "usernamehw.errorlens", // Inline error display
                // Testing
                "littlefoxteam.vscode-python-test-adapter",
                "ryanluker.vscode-coverage-gutters",
                // Productivity
                "christian-kohler.path-intellisense",
                "visualstudioexptteam.vscodeintellicode",
                "aaron-bond.better-comments",
                "alefragnani.bookmarks",
                "wayou.vscode-todo-highlight",
                "gruntfuggly.todo-tree",
                // Theme & UI
                "vscode-icons-team.vscode-icons",
                "pkief.material-icon-theme",
                // API Development
                "42crunch.vscode-openapi", // OpenAPI (Swagger) tools
                "rangav.vscode-thunder-client" // API client
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "poetry install && pre-commit install",
    // Configure tool-specific properties.
    "remoteUser": "root"
    // Set container specific settings
}
